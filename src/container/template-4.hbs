
    

             <header class="header">
                <div class="">    
                   {{> logo}}
                </div>
           
                <nav class="header_nav">
                    <div class="header_nav_right">
                      {{> nav list=header}}
                    </div>
                 </nav>
             </header>

{{#with main}}
<main class="hero">
    <img src="{{image}}" alt="{{title}}" class="hero_image">
    <div class="hero_content">
        <h1 class="hero_title">
            {{heading}}
        </h1>
        <p class="hero_text">
            {{descriotion}}
        </p>
        <a class="hero_button" href="{{href}}" alt="{{title}}">{{button}}</a>
    </div>
    
</main>
{{/with}}

<div class="featured">
    {{#each featured}}
        {{> card-featured img=photo href=linkUrl button=linkText title=heading text=info }}
    {{/each}}
</div>


<div class="form">
    {{#each actions}} <div class="form_section">
    <div class="form_content">
       
        <h3 class="form_title">
            {{heading}}
        </h3>
    
      
        <div class="form_action">
        <a href="{{url}}" title="{{title}}" class="form_button">{{text}}</a>
        </div>
        </div>
     </div>
     {{/each}}
</div>


         <footer class="footer">
            <div>
                {{> logo}}
                <span class="footer_copyright">
                    Copyright 2023-2024
                    </span>
            </div>
            {{#each footer}}
            <div>
               <span class="footer_title">
                {{title}}
                </span>
                {{> nav list=links isVertical=true}}
            </div>
           {{/each}}
         </footer>


